<div class="message">
    {{ content }}
    {{#if messageImg}}
    <img class="message__photo" src="{{{ messagePhoto }}}" alt="picture">
    {{/if}}
    <div class="message__meta">
        {{#if messageFromMe}}
            <div class="message__status">
                {{#if is_read}}
                    {{{ messageReadIcon }}}
                    {{else}}
                    {{{ messageUnreadIcon }}}
                {{/if}}
            </div>
        {{/if}}
        <time class="message__date {{#if messageImg}} {{messageTimeClass}}{{/if}}">{{messageTime}}</time>
    </div>
</div>
