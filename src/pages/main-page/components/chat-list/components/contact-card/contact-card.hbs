<div class="contact-card">
    {{> ContactAvatar }}
    <div class="contact-card__content">
        <div class="contact-card__content-header">
            <div class="contact-card__contact-name">
                {{ UserName }}
            </div>
            <div class="last-message-date">
                {{ lastMessageTime }}
            </div>
        </div>
        <div class="contact-card__content-body">
            <div class="contact-card__last-message">
                {{#if lastMessageFromMe}}
                    <span class="message-from-me">Вы: </span>
                {{/if}}{{ lastMessage }}
            </div>
            {{#if unreadMessagesCount}}
                <div class="unread-messages-count">
                    <div class="counter-wrapper">
                        {{ unreadMessagesCount }}
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>