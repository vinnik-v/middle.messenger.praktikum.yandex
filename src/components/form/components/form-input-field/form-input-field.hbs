<li class="form-input-field">
    <label for="{{ inputId }}" class="form-input-field__name">{{ fieldName }}</label>
    <input id="{{ inputId }}" name="{{ inputName }}" class="form-input-field__input" type="{{ inputType }}" placeholder="{{ placeholder }}" value="{{#if value}}{{value}}{{/if}}" />
    <p class="form-input-field__error-text">{{ errorText }}</p>
</li>