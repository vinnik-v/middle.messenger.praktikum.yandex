{
  "name": "messenger-praktikum",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "eslint . && tsc --noEmit && vite",
    "build": "eslint . && tsc --noEmit && vite build",
    "preview": "vite preview",
    "start": "eslint . && tsc --noEmit && vite build && node --loader ts-node/esm local-server.ts",
    "lint": "eslint . && stylelint --fix **/*.scss",
    "lint:css": "stylelint --fix **/*.scss",
    "test": "mocha",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm-run-all test eslint",
      "npm run test"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.3.14",
    "@types/express": "^4.17.21",
    "@types/handlebars": "^4.1.0",
    "@types/jsdom-global": "^3.0.7",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.25",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "chai": "^5.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "husky": "^8.0.3",
    "jsdom": "24.0.0",
    "jsdom-global": "3.0.2",
    "mocha": "^10.4.0",
    "mocha-jsdom": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^17.0.1",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  },
  "dependencies": {
    "@netlify/functions": "^2.6.0",
    "express": "^4.18.3",
    "handlebars": "^4.7.8",
    "lint-staged": "^15.2.2",
    "sass": "^1.71.1",
    "serverless-http": "^3.2.0"
  }
}
